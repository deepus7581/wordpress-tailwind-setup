{
  "name": "wordpress-tailwind-setup",
  "version": "1.0.0",
  "description": "Tailwind CSS setup for WordPress themes and plugins",
  "main": "index.js",
  "scripts": {
    "build": "tailwindcss -i ./src/input.css -o ./wp-content/plugins/PLUGIN_FOLDER_NAME/assets/css/main.css --watch",
    "build:prod": "NODE_ENV=production tailwindcss -i ./src/input.css -o ./wp-content/plugins/PLUGIN_FOLDER_NAME/assets/css/main.css --minify",
    "build:theme": "tailwindcss -i ./src/input.css -o ./wp-content/themes/CUSTOM_THEME_FOLDER_NAME/assets/css/main.css --watch",
    "build:theme:prod": "NODE_ENV=production tailwindcss -i ./src/input.css -o ./wp-content/themes/CUSTOM_THEME_FOLDER_NAME/assets/css/main.css --minify",
    "watch": "concurrently \"npm run watch:plugin\" \"npm run watch:theme\"",
    "watch:plugin": "tailwindcss -i ./src/input.css -o ./wp-content/plugins/PLUGIN_FOLDER_NAME/assets/css/main.css --watch",
    "watch:theme": "tailwindcss -i ./src/input.css -o ./wp-content/themes/CUSTOM_THEME_FOLDER_NAME/assets/css/main.css --watch",
    "dev": "npm run watch",
    "init": "node scripts/setup.js"
  },
  "keywords": [
    "wordpress",
    "tailwindcss",
    "css",
    "build-tool"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "concurrently": "^8.2.2",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10"
  }
}
